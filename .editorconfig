
# .editorconfig - Unity + Visual Studio UTF-8 설정

root = true

# 모든 파일에 적용
[*]
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# 파일 전용 설정
[*.cs]
dotnet_sort_system_directives_first = true
csharp_new_line_before_open_brace = all
